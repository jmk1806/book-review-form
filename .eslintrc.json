{
  "root": true,
  "plugins": ["eslint-comments", "sort-exports"],
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["eslint:recommended", "airbnb", "airbnb/hooks", "plugin:prettier/recommended"],
      "rules": {
        "class-methods-use-this": "off",
        "eslint-comments/no-unused-disable": "error",
        "import/order": [
          "error",
          {
            "newlines-between": "never",
            "alphabetize": {
              "order": "asc",
              "orderImportKind": "asc"
            }
          }
        ],
        "import/prefer-default-export": "off",
        "max-len": [
          "error",
          {
            "code": 120
          }
        ],
        "no-multi-str": "off",
        "react/react-in-jsx-scope": "off",
        "react/require-default-props": "off",
        "sort-exports/sort-exports": ["error", { "pattern": "**/index.tsx?", "sortDir": "asc" }]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@typescript-eslint/recommended", "airbnb-typescript"],
      "rules": {
        "@typescript-eslint/consistent-type-exports": "warn",
        "@typescript-eslint/consistent-type-imports": "warn",
        "@typescript-eslint/dot-notation": [
          "error",
          {
            "allowIndexSignaturePropertyAccess": true
          }
        ],
        "@typescript-eslint/indent": "off",
        "@typescript-eslint/no-unused-expressions": [
          "error",
          {
            "allowTaggedTemplates": true
          }
        ],
        "import/no-extraneous-dependencies": "off",
        "@typescript-eslint/no-unused-vars": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.stories.ts", "*.stories.tsx", "*.stories.js", "*.stories.jsx"],
      "rules": {
        "react/jsx-props-no-spreading": "off"
      }
    },
    {
      "files": ["*.model.ts", "*.model.js", "*.input.ts", "*.input.js"],
      "rules": {
        "max-classes-per-file": "off"
      }
    }
  ]
}
